@page "/calculator"

<h2>Simple Calculator</h2>

<div class="mb-3">
    <label>Number 1</label>
    <input type="number" class="form-control" @bind="Number1" />
</div>

<div class="mb-3">
    <label>Number 2</label>
    <input type="number" class="form-control" @bind="Number2" />
</div>

<div class="mb-3">
    <button class="btn btn-primary me-2" @onclick="Add">Add</button>
    <button class="btn btn-secondary me-2" @onclick="Subtract">Subtract</button>
    <button class="btn btn-success me-2" @onclick="Multiply">Multiply</button>
    <button class="btn btn-danger" @onclick="Divide">Divide</button>
</div>

@if (!string.IsNullOrEmpty(Result))
{
    <div class="alert alert-info">
        Result: @Result
    </div>
}

@code {
    private double Number1;
    private double Number2;
    private string Result = string.Empty;

    private void Add()
    {
        Result = (Number1 + Number2).ToString();
    }

    private void Subtract()
    {
        Result = (Number1 - Number2).ToString();
    }

    private void Multiply()
    {
        Result = (Number1 * Number2).ToString();
    }

    private void Divide()
    {
        if (Number2 == 0)
        {
            Result = "Cannot divide by zero";
        }
        else
        {
            Result = (Number1 / Number2).ToString();
        }
    }
}
